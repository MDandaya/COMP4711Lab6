<header class="main-header">
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item"><a href="/logout">Logout</a></li>
        </ul>
    </nav>
</header>

<div id="top">
    <h2>Artist Directory</h2>
    <input type="text" placeholder="" id="search-bar">
    <button onclick="createArtistParams()">Add</button>
    <button onclick="search()">Search</button>
    <!-- <button onclick="test()">Test</button> -->
</div>

<div class='flex-container'>
    {{#each artist}}
    <div class='flex-item hover'>
        <img src='{{this.imageURL}}' />
        <div class='description'>
            <strong>{{this.name}}</strong><br>
            <span>{{this.about}}</span>
        </div>
        <input class="del-button" type="button" value="delete" onclick="deleteNode(this)">
    </div>

    {{/each}}
</div>